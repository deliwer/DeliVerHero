# DeliWer Environment Configuration for Vercel Deployment

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database

# OpenAI API Configuration (for AI Concierge)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Shopify Configuration (for Hydrogen Integration)
SHOPIFY_APP_URL=https://deliwer-ecosystem.vercel.app
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret-key
SHOPIFY_SCOPES=write_products,read_products,write_orders,read_orders,write_customers,read_customers,write_draft_orders,read_draft_orders,write_inventory,read_inventory,write_fulfillments,read_fulfillments
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret-key

# Vercel Deployment Configuration
VERCEL_URL=https://deliwer-ecosystem.vercel.app
NODE_ENV=production

# Firebase Configuration (Optional - for real-time features)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Dubai-specific Configuration
DUBAI_TIMEZONE=Asia/Dubai
CURRENCY=AED